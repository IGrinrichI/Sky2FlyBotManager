#:kivy 2.1.0

<ClientsWidget>:
    GridLayout:
        id: layout
        size_hint_y: None
        height: self.minimum_height
        cols: 1


<PresetsWidget>:
    GridLayout:
        id: layout
        size_hint_y: None
        height: self.minimum_height
        cols: 1


<MainView>:
    id: main_view
    orientation: "horizontal"
    BoxLayout:
        orientation: "vertical"
        ClientsWidget:
            id: clients_tree
            size_hint_x: None
            width: 140
        Button:
            id: update_button
            text: "Вышло новое обновление!\nКликни, чтобы обновиться ;)"
            on_press: root.load_update()
            size_hint_y: None
            height: 45 * (1 - int(self.disabled))
            opacity: 1 - int(self.disabled)
            disabled: True
    PresetsWidget:
        id: presets_widget
