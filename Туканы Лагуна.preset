player.jump_forward_on_lose_target = True  # Ускоряться вперед после убийства цели. Полезно, чтобы залутать без лишних кликов. (True - чтобы включить, False - чтобы выключить)
player.stop_if_enemy_in_front_of_ship = True  # Если движемся к следующей точке в области, то остановиться, если на пути есть враг (True - чтобы включить, False - чтобы выключить)
